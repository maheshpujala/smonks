<?xml version="1.0" encoding="utf-8"?>
<level-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:maxLevel="0">
        <shape>
            <solid android:color="@color/app_theme" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:maxLevel="1">
        <shape>
            <solid android:color="@color/white_color" />

            <stroke
                android:width="1dp"
                android:color="@color/addcart_prod_button_color" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:maxLevel="2">
        <shape>
            <solid android:color="@color/facebook_backgroud" >
            </solid>

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:maxLevel="3">
        <shape>
            <solid android:color="@color/twitter_backgroud" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:maxLevel="4">
        <shape>
            <solid android:color="@color/white_color" />

            <stroke
                android:width="1dp"
                android:color="@color/callus_stroke" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:maxLevel="5">
        <selector>
            <item android:state_pressed="false">
                <layer-list>

                    <!-- BUTTON -->
                    <item>
                        <shape>
                            <solid android:color="@color/app_theme" />

                            <corners android:radius="2dp" />

                            <padding
                                android:bottom="10dp"
                                android:left="10dp"
                                android:right="10dp"
                                android:top="10dp" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item android:state_pressed="true">
                <layer-list>

                    <!-- BUTTON -->
                    <item>
                        <shape>
                            <solid android:color="@color/app_theme" />

                            <corners android:radius="2dp" />

                            <padding
                                android:bottom="10dp"
                                android:left="10dp"
                                android:right="10dp"
                                android:top="10dp" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>

</level-list>