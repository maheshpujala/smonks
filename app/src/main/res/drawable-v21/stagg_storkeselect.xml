<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="3dp" />

            <solid android:color="#40000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#40000000" />

            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>